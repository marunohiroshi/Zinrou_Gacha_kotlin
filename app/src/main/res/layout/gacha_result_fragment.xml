    <FrameLayout
            android:id="@+id/card_front_back_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Black"
            android:clipChildren="false"
            android:clipToPadding="false">

        <ImageView
                android:id="@+id/background_animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleY="2"
                tools:src="@raw/card_open_background2"/>

        <ImageView
                android:id="@+id/card_open_animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleY="2"
                tools:src="@raw/card_open_animation"/>

        <ImageView
                android:id="@+id/card_back_design"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp"
                tools:src="@drawable/card_design96"
                android:contentDescription="@string/app_name"/>

        <ImageView
                android:id="@+id/card_front_design"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp"
                tools:src="@drawable/simin"
                android:contentDescription="@string/app_name"/>
    </FrameLayout>
</layout>